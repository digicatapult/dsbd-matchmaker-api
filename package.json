{
  "name": "@digicatapult/dscp-matchmaker-api",
  "version": "0.5.12",
  "description": "An OpenAPI Matchmaking API service for DSCP",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint .",
    "depcheck": "depcheck",
    "build:tsoa": "tsoa spec-and-routes",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node build/index.js",
    "dev": "npm run build && NODE_ENV=dev concurrently \"npx tsc --watch\" \"nodemon -q build/index.js | pino-colada\"",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json -r ts-node/register ./test/**/*.test.ts",
    "test:unit": "NODE_ENV=test ./node_modules/.bin/mocha --config ./test/mocharc.json -r ts-node/register ./src/**/*.test.ts",
    "db:migrate": "npx knex migrate:latest --knexfile src/lib/db/knexfile.ts",
    "coverage": "c8 npm run test",
    "flows": "npx @digicatapult/dscp-process-management@latest create -h localhost -p 9944 -u //Alice \"$(cat processFlows.json)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/dscp-matchmaker-api.git"
  },
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "keywords": [
    "OpenAPI"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digicatapult/dscp-matchmaker-api/issues"
  },
  "homepage": "https://github.com/digicatapult/dscp-matchmaker-api#readme",
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "c8": "^7.13.0",
    "chai": "^4.3.7",
    "concurrently": "^7.6.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "pino-colada": "^2.2.2",
    "prettier": "^2.8.7",
    "sinon": "^15.0.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "undici": "^5.21.1"
  },
  "dependencies": {
    "@polkadot/api": "^10.2.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "knex": "^2.4.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.10.0",
    "pino": "^8.11.0",
    "swagger-ui-express": "^4.6.2",
    "tsoa": "^5.1.1"
  }
}
