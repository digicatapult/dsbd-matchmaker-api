{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/controllers/**/*.ts"
  ],
  "multerOpts": {
    "limits": {
      "fileSize": 1024
    }},  
    "spec": {
    "outputDirectory": "src",
    "specVersion": 3,
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "specMerging": "recursive",
    "spec": {
      "paths": {
        "/attachment": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "application/json": {
                  "schema": {
                    "anyOf": [
                      {
                        "type": "object",
                        "properties": {
                          "file":{
                            "type": "string",
                            "format": "binary"
                          }
                        },
                        "example": {
                          "some": "example JSON"
                        }
                      },
                      {
                        "type": "array",
                        "properties": {
                          "file":{
                            "type": "string",
                            "format": "binary"
                          }
                        },
                        "items": {
                          "example": {
                            "some": "example JSON"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            "consumes": [
              "multipart/form-data",
              "application/json"
            ]
          }
        },
        "/attachment/uploadFile": {
          "post": {
            "requestBody": {
              "required": true,
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "anyOf": [
                      {
                        "type": "object",
                        "properties": {
                          "file":{
                            "type": "string",
                            "format": "binary"
                          }
                        },
                        "example": {
                          "some": "example JSON"
                        }
                      },
                      {
                        "type": "array",
                        "properties": {
                          "file":{
                            "type": "string",
                            "format": "binary"
                          }
                        },
                        "items": {
                          "example": {
                            "some": "example JSON"
                          }
                        }
                      }
                    ]
                  }
                }
              }
            },
            "consumes": [
              "multipart/form-data",
              "application/json"
            ]
          }
        },
        "/attachment/{id}": {
          "get": {
            "responses": {
              "200": {
                "content": {
                  "application/octet-stream": {
                    "schema": {
                      "description": "Attachment file",
                      "type": "string",
                      "format": "binary"
                    }
                  },
                  "application/json": {
                    "schema": {
                      "description": "Attachment json",
                      "anyOf": [
                        {
                          "type": "object",
                          "example": {
                            "some": "example JSON"
                          }
                        },
                        {
                          "type": "array",
                          "items": {
                            "example": {
                              "some": "example JSON"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "./src/lib/authentication.ts"
  }
}
